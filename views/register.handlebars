<p>This is the Sign Up page</p>
<section>
    <h1>Sign Up Page</h1>

    <form method="post" action="/users/register">

    <div>
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" value="{{current_form_data.firstName}}">
    </div>

    <div>
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" value="{{current_form_data.lastName}}">
    </div>

    <div>
        <label for="email">Email</label>
        <input type="text" id="email" name="email" value="{{current_form_data.email}}">
    </div>

    <div>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" value="{{current_form_data.username}}">
    </div>

    <div> 
        <label for="password">Password</label>
        <input type="text" id="password" name="password" value="{{current_form_data.password}}">
    </div>

    <div>
        <button type="submit">Register</button>
    </div>
    </form>
</section>